<!DOCTYPE html>
<html>
{{template "header.tmpl" .}}
{{$expand := .Expand}}
<body>
	<header>
	<p id="blog_title"><a href="/">{{.Config.Blog.Title}}</a></p>
	<p id="blog_subtitle">{{.Config.Blog.Subtitle}}</p>
	</header>
<div>
{{range .Articles.Enabled}}
	<article>
		<header>
			<h1><a href="/{{.Slug}}">{{.Title}}</a></h1>
		</header>
		{{if $expand}}
			{{.Body}}
			{{if len .Comments.Enabled}}
			<article id="comments">
				<h4>Comments</h4>
				{{range .Comments.Enabled}}
				<article>
				<header>
				<p>On <time>{{.PostDate}}</time> {{.Name}} wrote in to say &hellip;</p>
				</header>
				<blockquote>{{.Comment}}</blockquote>
				</article>
				{{end}}
			</article>
			{{end}}
		{{else}}
			{{.ReadMore}}
			{{if .HasMore}}
				<p>Continue reading <a href="/{{.Slug}}">{{.Title}}</a>&hellip;</p>
			{{end}}

			<footer>
			<p>Published: <time>{{.PostDate}}</time></p>
			{{if len .Comments.Enabled}}
			<p>Comments: <a href="/{{.Slug}}#comments">{{len .Comments.Enabled}}</a></p>
			{{end}}
			{{with .Tags}}
			<p>Tagged: {{range .}}<a href="/tag/{{.}}">{{.}}</a> {{end}}</p>
			{{end}}
			</footer>
		{{end}}
	</article>

{{end}}
</div>

<aside>
