	<ul>
	{{range .Slugs}}
	<li><a href="/{{.Slug}}">{{.Title}}</a></li>
	{{end}}
	</ul>
	{{end}}
	</ul>
	{{end}}
	</ul>
	</section>
 */}}

	<section id="tagcloud">
	<h3>Tag Cloud</h3>
	<ul>
	{{range .TagCloud}}
	<li class="tagcloud_{{.Wight}}"><a href="/tag/{{.Tag}}">{{.Tag}}</a></li>
	{{end}}
	</ul>
	</section>
</aside>

	{{with .Error}}
	<p>{{.}}</p>
	{{end}}

<footer>
	{{with .PrevPage}}
	<a href="/page/{{.}}">&larr; Newer Articles</a>
	{{end}}

	{{with .NextPage}}
	<a href="/page/{{.}}">Older Articles &rarr;</a>
	{{end}}
</footer>
</html>
