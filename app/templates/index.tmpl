<!DOCTYPE html>
<html>
{{template "header.tmpl" .}}
{{$expand := .Expand}}
<body>
	<header>
	<p id="blog_title"><a href="/">{{.Config.Blog.Title}}</a></p>
	<p id="blog_subtitle">{{.Config.Blog.Subtitle}}</p>
	</header>
<div>
{{range .Articles}}
	<article>
		<header>
			<h1><a href="/{{.Slug}}">{{.Title}}</a></h1>
		</header>
		{{if $expand}}
		{{.Body}}
		{{else}}
		{{.ReadMore}}
		{{if .HasMore}}
			<p>Continue reading <a href="/{{.Slug}}">{{.Title}}</a>&hellip;</p>
		{{end}}
		{{end}}
		<footer>
		<p>Published: {{.PostDate}}</p>
		<p>Tagged: {{range .Tags}}<a href="/tag/{{.}}">{{.}}</a> {{end}}</p>
		</footer>
	</article>
{{end}}
</div>

<aside>
{{/*
	<section id="archive">
	<h3>Archive</h3>
	<ul>
	{{range .Archive}}
	<li><a href="/{{.Year}}/">{{.Year}}</a> ({{.Count}})</li>
	<ul>
	{{range .Month}}
	<li><a href="/{{.Year}}/{{.Month}}/">{{.Month}}</a> ({{.Count}})</li>	
	<ul>
	{{range .Slugs}}
	<li><a href="/{{.Slug}}">{{.Title}}</a></li>
	{{end}}
	</ul>
	{{end}}
	</ul>
	{{end}}
	</ul>
	</section>
 */}}

	<section id="tagcloud">
	<h3>Tag Cloud</h3>
	<ul>
	{{range .TagCloud}}
	<li class="tagcloud_{{.Wight}}"><a href="/tag/{{.Tag}}">{{.Tag}}</a></li>
	{{end}}
	</ul>
	</section>
</aside>

	{{with .Error}}
	<p>{{.}}</p>
	{{end}}

<footer>
	{{with .PrevPage}}
	<a href="/page/{{.}}">&larr; Newer Articles</a>
	{{end}}

	{{with .NextPage}}
	<a href="/page/{{.}}">Older Articles &rarr;</a>
	{{end}}
</footer>
</html>
