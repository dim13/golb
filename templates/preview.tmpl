<article>
<header>
	<h1><a href="{{.FullSlug}}">{{.Title}}</a></h1>
	<ul>
	<li class="left">Published:
	   <time>{{.PostDate}}</time></li>
	<li class="right">Tagged:
	   {{range .Tags}}<a href="/tag/{{.}}">{{.}}</a> {{end}}</li>
	</ul>
</header>
	{{.Spoiler}}
	{{if .HasMore}}<p><a href="{{.FullSlug}}">Read the rest of this story &hellip;</a></p>{{end}}
	<footer>
		<ul>
		<li class="left">Comments: <a href="{{.FullSlug}}#comments">{{len .Comments}}</a></li>
		</ul>
	</footer>
</article>
